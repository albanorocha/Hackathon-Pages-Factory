
<div class = "container">
  <div class="row col-md-4">
</div>
  <div class="row col-md-4">
   <br>
   <h3>Cadastre-se</h3>
    <hr>

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "Nome" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: "Senha" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirmar Senha"  %>
    </div>
     <%= f.submit 'Cadastrar', :class => 'button right btn btn-lg btn-primary btn-block' %>
  <% end %>
</div>


</div>
  <div class="row col-md-4">
</div>

</div>
