
<div class = "container">
  <div class="row col-md-4">  
</div>
  <div class="row col-md-4">
   <br>
   <h3>Entrar</h3>
    <hr>


<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>

    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Cadastre-se', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      
      <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      
      <%= f.password_field :password, class: 'form-control', placeholder: "Senha" %>
    </div>
      <%= f.submit 'Entrar', :class => 'button right btn btn-lg btn-primary btn-block' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Lembrar-me
          </label>
        </div>
      <% end -%>
  <% end %>
</div>



</div>
  <div class="row col-md-4">  
</div>

</div>