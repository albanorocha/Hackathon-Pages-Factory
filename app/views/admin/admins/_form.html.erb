<%= simple_form_for([:admin, @admin]) do |f| %>
  <%= f.error_notification %>

  <%= f.simple_fields_for :user do |u| %>
    <div class="form-inputs">
    <%= u.input :name %>
    <%= u.input :email %>
    <%= u.input :password %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
