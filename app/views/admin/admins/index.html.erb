<p id="notice"><%= notice %></p>

<h1>Listing Admins</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.user.name %></td>
        <td><%= admin.user.email %></td>
        <td><%= admin.user.system_user_type %></td>
        <td><%= link_to 'Show', [:admin,admin] %></td>
        <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', [:admin,admin], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

