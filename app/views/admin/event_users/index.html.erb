<div class="container">
  <% if policy(@event_users.first).create? %>
  <div class="row centered">
      <span style="color:#f0ad4e"> <%= link_to new_admin_event_user_path, class: "btn btn-primary" do %>
        <i class="fa fa-plus-circle"></i> Novo Medhacker
      <% end %>
      </span> &nbsp;

      <span style="color:#f0ad4e"> <%= link_to new_manager_admin_event_users_path, class: "btn btn-info" do %>
        <i class="fa fa-plus-circle"></i> Novo Organizador
      <% end %>
      </span>
      <hr>
   </div>
  <% end %>

<div class="row col-lg-6 col-lg-offset-3 ">

<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><b>Eventos</b></div>

<table class="table table-hover table-responsive", style="background:#fff">
  <thead>
    <tr>
      <th>Usu√°rio</th>
      <th>Tipo</th>
      <% if policy(@event_users.first).create? %>
      <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @event_users.each do |event_user| %>
      <tr>
        <td><%= event_user.user.email %></td>
        <td><span class="label label-info label-mini"><%= event_user.role %></span></td>
        <% if policy(event_user).create? %>
        <td>
          <%= link_to admin_event_user_path(event_user, :code => @event.code), method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <i class="fa fa-trash-o btn btn-default btn-xs"></i>
        <% end %>
        </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

</div>
<p class="pull-right">
<%= link_to 'Evento', admin_event_path(@event.code) , class: "btn btn-default" %>
</p>
</div>


</div>

