<p id="notice"><%= notice %></p>

<h1>Listing Admin Event Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_users.each do |event_user| %>
      <tr>
        <td><%= event_user.user.email %></td>
        <td><%= event_user.role %></td>
        <td><%= link_to 'Show', admin_event_user_path(event_user, :code => @event.code) %></td>
        <td><%= link_to 'Edit', edit_admin_event_user_path(event_user, :code => @event.code) %></td>
        <td><%= link_to 'Destroy', admin_event_user_path(event_user, :code => @event.code), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

