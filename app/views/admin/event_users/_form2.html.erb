<%= simple_form_for([:admin, @event_user], url: admin_event_user_path(@event_user,:code => @event.code)) do |f| %>
  <%= f.error_notification %>

  <h3><%=@event_user.user.name%></h3>

  <div class="form-inputs">
    <%= f.input :role, :collection => EventUser.roles, :label_method => :first,
        :value_method => :first , :label => "Role" ,:include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
