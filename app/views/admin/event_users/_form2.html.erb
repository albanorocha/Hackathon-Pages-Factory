<%= simple_form_for([:admin, @event_user], url: admin_event_user_path(@event_user,:code => @event.code)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role, :collection => EventUser.roles, :label_method => :first,
        :value_method => :first , :label => "Tipo" ,:include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Enviar", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
