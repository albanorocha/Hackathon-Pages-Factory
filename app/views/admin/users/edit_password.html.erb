<%= simple_form_for [:admin, @user], url: user_password_admin_user_path  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, label: "Senha" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Enviar", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
