<div class="container">
  <div class="row centered">
      <h2> <%= link_to new_admin_user_path do %> 
        <i class="fa fa-plus-circle"></i> Usu√°rio
      <% end %>
      </h2>
      <hr>
   </div>

<div class="row col-lg-6  col-lg-offset-3 table-responsive">

<table class="table table-hover", style="background:#fff">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><span class="label label-warning label-mini"><%= user.role %></span></td>
        <td>
          <%= link_to [:admin, user] do %> 
            <i class="fa fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_user_path(user) do %> 
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>        
        <td>
          <%= link_to [:admin, user], method: :delete, data: { confirm: 'Tem certeza?' } do %> 
            <i class="fa fa-trash-o"></i>
        <% end %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>