<div class="container">
  <div class="row centered">
      <h2> <%= link_to new_admin_user_path, class: "btn btn-primary" do %>
        <i class="fa fa-plus-circle"></i> Novo Usuário
      <% end %>
      </h2>
      <hr>
   </div>

<div class="row col-lg-8  col-lg-offset-2 ">

<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><b>Usuários</b></div>

<table class="table table-hover table-responsive", style="background:#fff">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><span class="label label-warning label-mini"><%= user.role %></span></td>
        <td>
          <%= link_to [:admin, user] do %>
            <i class="fa fa-eye btn btn-default btn-xs"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_user_path(user) do %>
            <i class="fa fa-pencil btn btn-default btn-xs"></i>
          <% end %>
        </td>
        <td>
          <%= link_to [:admin, user], method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <i class="fa fa-trash-o btn btn-default btn-xs"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<div class="container">
<div class="row">
  <div class="text-center"> <%= will_paginate @users, renderer: BootstrapPagination::Rails, previous_label: "Voltar", next_label: "Próxima"  %> </div>
</div>




