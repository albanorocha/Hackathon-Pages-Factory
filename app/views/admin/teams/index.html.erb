<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', admin_event_team_path(team, :code => @event.code) %></td>
        <td><%= link_to 'Edit', edit_admin_event_team_path(team, :code => @event.code) %></td>
        <td><%= link_to 'Destroy', admin_event_team_path(team, :code => @event.code), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_admin_event_team_path %>
