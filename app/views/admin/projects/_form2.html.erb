<%= simple_form_for([:admin, @project], url: admin_event_team_project_path(
    @project, :code => @event.code, :event_team_id => @team)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome" %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, label: "Descrição" %>
  </div>

  <div class="form-inputs">
    <%= f.input :image, label: "Imagem" %>
  </div>

  <div class="form-inputs">
    <%= f.input :why %>
  </div>

  <div class="form-inputs">
    <%= f.input :how %>
  </div>

  <div class="form-inputs">
    <%= f.input :what %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Enviar", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>