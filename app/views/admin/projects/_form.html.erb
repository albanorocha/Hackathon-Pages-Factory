<%= simple_form_for([:admin, @project], url: admin_event_team_projects_path(
    @project, :code => @event.code, :event_team_id => @team)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome" %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, label: "Descrição do Projeto" %>
  </div>

  <div class="form-inputs">
    <%= f.input :problem , label: "Qual o problema"%>
  </div>

  <div class="form-inputs">
    <%= f.input :solution, label: "Qual a solução" %>
  </div>

  <div class="form-inputs">
    <%= f.input :team_description, label: "Descrição da equipe" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Enviar", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
