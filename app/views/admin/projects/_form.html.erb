<%= simple_form_for([:admin, @project], url: admin_event_team_projects_path(
    @project, :code => @event.code, :event_team_id => @team)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :problem %>
  </div>

  <div class="form-inputs">
    <%= f.input :solution %>
  </div>

  <div class="form-inputs">
    <%= f.input :team_description %>
  </div>

  <div class="form-inputs">
    <%= f.input :facebook_link %>
  </div>
  <div class="form-inputs">
    <%= f.input :youtube_link %>
  </div>
  <div class="form-inputs">
    <%= f.input :instagram_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
