<%= simple_form_for([:admin_event, @team_user], url: admin_event_team_user_path(@team_user,
          event_team_id: @team_user.team, code: @event.code)) do |f| %>
  <%= f.error_notification %>

  <h3> <%= @team_user.user.name %> </h3>

  <div class="form-inputs">
    <%= f.input :role, :collection => TeamUser.roles, :label_method => :first,
        :value_method => :first , :label => "Role" ,:include_blank => false %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
