<div class="container">
  <div class="row centered">
      <h2> <%= link_to new_admin_event_team_user_path do %> 
        <i class="fa fa-plus-circle"></i> Novo Membro
      <% end %>
      </h2>
      <hr>
   </div>
<div class="col-lg-5 col-lg-offset-3">
<h3>Membros da equipe: <b><%= @team.name %> </b></h3>



<table class="table table-hover", style="background:#fff">  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_users.each do |team_user| %>
      <tr>
        <td><%= team_user.user.name %></td>
        <td><%= team_user.role %></td>
<!--        <td>
          <%= link_to admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code) do %> 
            <i class="fa fa-eye"></i>
          <% end %>
        </td>
-->
        <td>
          <%= link_to edit_admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code)  do %> 
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>        
        <td>
          <%= link_to admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code), method: :delete, data: { confirm: 'Tem certeza?' } do %> 
            <i class="fa fa-trash-o"></i>
        <% end %>          
        </td>

    <% end %>
  </tbody>
</table>
<p class="pull-right">
<%= link_to 'Equipe', admin_event_team_path(@team, :code => @event.code), class: "btn btn-warning" %>
</p>
</div>

</div>
