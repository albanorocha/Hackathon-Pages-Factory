<p id="notice"><%= notice %></p>

<h1>Listing <b><%= @team.name %> </b> Users</h1>



<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_users.each do |team_user| %>
      <tr>
        <td><%= team_user.user.name %></td>
        <td><%= team_user.role %></td>
        <td><%= link_to 'Show', admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code) %></td>
        <td><%= link_to 'Edit', edit_admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code) %></td>
        <td><%= link_to 'Destroy', admin_event_team_user_path(team_user,
          event_team_id: team_user.team, code: @event.code), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team user', new_admin_event_team_user_path %>
