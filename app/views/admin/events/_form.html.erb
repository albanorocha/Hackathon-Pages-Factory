<%= simple_form_for([:admin, @event]) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :descriptor %>
    </div>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.label :date %>
      <%= date_field(:event, :date) %>
    </div>

    <div class="form-inputs">
      <%= f.input :address %>
    </div>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.input :image %>
    </div>

    <div class="form-inputs">
      <%= f.input :release_sign_up %>
    </div>

    <div class="form-inputs">
      <%= f.input :published %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
