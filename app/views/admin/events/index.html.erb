<div class="container">
  <% if policy(Event).create? %>
  <div class="row centered">
      <h2> <%= link_to new_admin_event_path do %>
        <i class="fa fa-plus-circle"></i> Evento
      <% end %>
      </h2>
      <hr>
  </div>
  <% end %>


<div class="row col-lg-8 col-lg-offset-2 table-responsive">

<table class="table table-hover", style="background:#fff">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Data</th>
      <th>Inscrições</th>
      <th>Publicado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.code %></td>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td>
          <% if event.release_sign_up %>
            <i class="fa fa-check" style="color: green"></i>
          <% else %>
            <i class="fa fa-times" style="color: red"></i>
          <% end %>
        </td>
        <td>
          <% if event.published %>
            <i class="fa fa-check" style="color: green"></i>
          <% else %>
            <i class="fa fa-times" style="color: red"></i>
          <% end %>
        </td>

        <td>
          <%= link_to admin_event_path(event) do %>
            <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <% if policy(event).create? %>
        <td>
          <%= link_to edit_admin_event_path(event) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3 "> <%= will_paginate @users %> </div>
</div>

</div>
