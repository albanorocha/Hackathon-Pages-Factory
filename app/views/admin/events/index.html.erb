<div class="container">
  <div class="row centered">
      <h2> <%= link_to new_admin_event_path do %>
        <i class="fa fa-plus-circle"></i> Evento
      <% end %>
      </h2>
      <hr>
   </div>


<div class="row col-lg-10 col-lg-offset-1 table-responsive">

<table class="table table-hover", style="background:#fff">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Data</th>
      <th>Endereço</th>
      <th>Liberar Inscrições</th>
      <th>Publicar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.code %></td>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.address %></td>
        <td><%= event.release_sign_up %></td>
        <td><%= event.published %></td>

        <td>
          <%= link_to admin_event_path(event) do %>
            <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <td>
          <%= link_to edit_admin_event_path(event) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>

        <td>
          <%= link_to [:admin, event], method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
